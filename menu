while True:
    print("Benveuto nella nostra calcolatrice")
    print("Inserisci l'operazione che vuoi effettuare")
    scelta = int(input("1)sottrazione\n2)addizione\n0)exit"))
    if scelta == 0:
        break
    elif scelta == 1:
        sottrazione()
    elif scelta == 2:
        somma()
    else: 
        print("Scelta non corretta!!")
